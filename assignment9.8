class Fan {
   public static final int SLOW = 1; // declare a constant variable SLOW with value 1
  public static final int MEDIUM = 2; // declare a constant variable MEDIUM with value 2
  public static final int FAST = 3; // declare a constant variable FAST with value 3
  private int speed; // declare a private integer variable speed
  private boolean on; // declare a private boolean variable on
  private double radius; // declare a private double variable radius
  private String color; // declare a private string variable color

  public Fan() { // constructor Fan
      speed = SLOW; // set speed to SLOW
      on = false; // set on to false
      radius = 5; // set radius to 5
      color = "blue"; // set color to blue
  }
  public int getSpeed() { // getter method for speed variable
      return speed; // return the value speed
  }
  public void setSpeed(int speed) { // setter method for speed variable
      this.speed = speed; // set the value of speed to the value passed as an argument
  }
  public boolean isOn() { // getter method for on variable
      return on; // return the value on
  }
  public void setOn(boolean on) { // setter method for on variable
      this.on = on; // set the value of on to the value passed as an argument
  }
  public double getRadius() { // getter method for radius variable
      return radius; // return the value radius
  }
  public void setRadius(double radius) { // setter method for radius variable
      this.radius = radius; // set the value of radius to the value passed as an argument
  }
  public String getColor() { // getter method for color variable
      return color; // return the value color
  }
  public void setColor(String color) { // setter method for color variable
      this.color = color; // set the value of color to the value passed as an argument
  }
  @Override // override the toString method
  public String toString() { // toString method to return the fan details
      if (on) { // if the fan is on return the fan details with speed, color and radius
          return "Fan is on with speed " + speed + ", color " + color + " and radius " + radius;
      } else { // if the fan is off return the fan details with color and radius
          return "Fan is off with color " + color + " and radius " + radius;
      }
  }
}
public class Main {
  public static void main(String[] args) {
      Fan fan1 = new Fan();
      fan1.setSpeed(Fan.FAST);
      fan1.setRadius(10);
      fan1.setColor("yellow");
      fan1.setOn(true);
      Fan fan2 = new Fan();
      fan2.setSpeed(Fan.MEDIUM);
      fan2.setRadius(5);
      fan2.setColor("blue");
      // Fan2 remains off
      System.out.println(fan1.toString());
      System.out.println(fan2.toString());
  }
}
